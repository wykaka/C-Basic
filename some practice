#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
#include <string.h>
#include <windows.h>
#include <stdlib.h>

//一个整数，它加上100后是一个完全平方数，再加上168又是一个完全平方数，请问该数是多少？
int main()
{
	int m = 0, n = 0, i = 0, j = 0, k = 0, cha = 0, shu = 0;
	printf("请输入较大的加数：");
	scanf("%d", &m);
	printf("\n请输入较小的加数：");
	scanf("%d", &n);
	cha = m - n;

	for (i = 1; i <= cha / i; i++)
	{
		if (0 == cha % i)
		{
			j = cha / i;
			if (i % 2 == j % 2)
			{
				k = (i + j) / 2;
				k *= k;
				shu = k - m;
				printf("\n这个数是：%d\n", shu);
			}
		}
	}
	return 0;
}

