//输入密码，最多错误三次
int main()
{
	char sq[] = "123456ab";                         //创建正确密码
	char password[20] = { 0 };                      //创建字符串变量存储密码
	int i = 0;
	
	for (i = 0; i < 3; i++)
	{
		printf("请输入密码：");                     //打印“请输入密码：”
		scanf("%s", password);                      //接收用户输入的密码
		if (0 == strcmp(password,sq))               //判断密码是否正确
		{
			printf("登陆成功！\n");                 //若正确，显示“登录成功！”
			break;                                  //跳出循环
		}
		else
		{
			printf("密码错误！\n");                 //若错误，显示“密码错误！请重新输入！”
		}
	}

	if (3 == i)
	{
		Sleep(1000);
		printf("\n三次输入密码错误，已退出程序！");   //若三次均不成功，显示“三次输入密码错误，已退出程序！”
	}

	return 0;
}
